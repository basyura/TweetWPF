<ev:ViewBase x:Class="TweetWPF.Views.TweetWPFView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ev="clr-namespace:Eleve;assembly=Eleve"
        xmlns:vm="clr-namespace:TweetWPF.ViewModels"
        Title="MainWindow" Height="350" Width="525">
    
    <ev:ViewBase.DataContext>
        <vm:TweetWPFViewModel />
    </ev:ViewBase.DataContext>
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="ContentRendered">
            <ev:Execute Action="Initialize" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Text="{Binding Message}" TextAlignment="Center" />
        <DataGrid Grid.Row="1" ItemsSource="{Binding Tweets}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ScreenName" Binding="{Binding CreatedBy.Name }" Width="100" />
                <DataGridTemplateColumn Header="Full Text" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FullText}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>        
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</ev:ViewBase>
